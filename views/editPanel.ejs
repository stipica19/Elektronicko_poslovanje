   <form  action="/admin/panel_edit/<%= panel._id %>?_method=PUT" method="post" style="margin:10px;">
   	<h1>Uredi panel</h1><br>
  <div class="form-group">
    <label for="dimenzija">Dimenzija panela</label>
    <input type="text" class="form-control" value="<%= panel.dimenzija %>" name="dimenzija" id="dimenzija" placeholder="Dimenzija">
  </div >
 
    <div>
      <select name="id_lokacija">
        <option value="" disabled selected><%= panel.id_lokacija.grad %></option>
       
         <% locations.forEach((l)=>{%>
          <option value="<%= l._id %>" name="id_lokacija"> <%= l.grad %>  </option>
          <% });%>
     
    </select>
    </div>  
    <div class="form-group">
      <label for="pocetna_cijena">Pocetna cijena</label>
      <input type="number" class="form-control" value="<%= panel.pocetna_cijena %>" id="pocetna_cijena" name="pocetna_cijena" placeholder="Pocetna cijena">
    </div>
 
  <div class="form-group">
    <label for="broj_mjesta">Broj mjesta</label>
    <input type="number" class="form-control" id="broj_mjesta" value="<%= panel.brojMjesta %>" name="brojMjesta" placeholder="Broj mjesta">
  </div>
  <div class="form-group">
    <label for="opis">Opis</label>
    <input type="text" class="form-control" id="opis" value="<%= panel.opis %>" name="opis" placeholder="Opis">
  </div>
  
  <button type="submit" class="btn btn-primary">Spremi</button>
</form>
