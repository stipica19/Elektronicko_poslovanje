        <div class="container">
            <!-- Codrops top bar -->
          <br><br><br><br><br><br>
       
            <section>				

				<div class="container">
<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <div class="panel panel-white profile-widget">
            <div class="row">
                <div class="col-sm-12">
                    
                </div>
                <% if(user){ %>
                <div class="col-sm-12" style="background-color:#f0f8ff;">
                    <div class="details">
                        <h4><%= user.name %> <i class="fa fa-sheild"></i></h4>
                        <div><%= user.email %> </div>
					       <br>
						 <a href="/user_profile_edit/<%= user._id %> " class="btn btn-green btn-sm">Edit</a>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
        
    <div class="row">    	
      <h2>AKTIVNE REZERVACIJE</h2>	
    <table class="table table-hover">
    <thead class="thead-dark">
    <tr>
      <th scope="col">Dimenzija</th>
      <th scope="col">Lokacija</th>
	  <th scope="col">Trajanje</th>
      <th scope="col">Cijena</th>
      <th scope="col">Izbrisi</th>
    </tr>
    </thead>
    <tbody style="background-color:#f0f8ff;">
      <% rezervacija.forEach((p)=>{%>
    <tr>
      <td> <%= p.panel.dimenzija %></td>
      <td><%= p.panel.id_lokacija.grad %></td>
	  <td><%= p.odDatuma.toLocaleDateString('en-GB') %> do <%= p.doDatuma.toLocaleDateString('en-GB') %></td>
      <td><%= p.cijena %> KM</td>
      <form action="/users/<%= p._id %>?_method=DELETE" method="post" >
        <td><button type="submit" class="btn btn-danger btn-sm">Spremi</button></td>
        
      </form>
      
    </tr>
    <% });%>
    </tbody>
    </table>	   
    </div>
    <div class="row">    	
      <h2>Zavrsene REZERVACIJE</h2>	
    <table class="table table-hover">
    <thead class="thead-dark">
    <tr>
      <th scope="col">Dimenzija</th>
      <th scope="col">Lokacija</th>
	  <th scope="col">Trajanje</th>
      <th scope="col">Cijena</th>
      <th scope="col">Edit</th>
    </tr>
    </thead>
    <tbody style="background-color:#f0f8ff;">
      <% old.forEach((p)=>{%>
    <tr>
      <td> <%= p.dimenzija %></td>
      <td><%= p.grad %></td>
	  <td><%= p.odDatuma.toLocaleDateString('en-GB') %> do <%= p.doDatuma.toLocaleDateString('en-GB') %></td>
      <td><%= p.cijena %> KM</td>
      <td><a href="#" class="btn btn-green btn-sm">Edit</a></td>
    </tr>
    <% });%>
    </tbody>
    </table>	   
    </div>
  </div>
 </div>
